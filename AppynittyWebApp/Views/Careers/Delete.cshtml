@model AppynittyWebApp.Models.Career
@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
}
<h2>Deleting Employee</h2>

<h3>Would you like to continue?</h3>
<div class="container p-3 my-3 border">
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.JobTitle)
        </dd>
        <dt class="col-sm-3">
            Minimum Experience
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MinExp)
        </dd>
        <dt class="col-sm-3">
            Maximum Experience
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MaxExp)
        </dd>
        <dt class="col-sm-3">
            Minimum Salary
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MinSalary)
        </dd>
        <dt class="col-sm-3">
            Maximum Salary
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MaxSalary)
        </dd>
        <dt class="col-sm-3">
            Job Location
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.JobLocation)
        </dd>
        <dt class="col-sm-3">
            Job Description
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.JobDesc)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input class="btn btn-primary" type="submit" value="Yes" />
        <a class="btn btn-danger" asp-action="Index">No</a>
    </form>

</div>