@model AppynittyWebApp.Models.Career
@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}
<style>
    .rupee {
        content: "\20B9";
    }
</style>
<div class="container p-3 my-3 border">
    <h1>Job Details</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.JobTitle)
        </dd>
        <dt class="col-sm-3">
             Experience
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MinExp)<span>Yrs</span> - @Html.DisplayFor(model => model.MaxExp)<span>Yrs</span>
        </dd>
        <dt class="col-sm-3">
             Salary
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MinSalary)<span class="rupee">&#8377;</span> - @Html.DisplayFor(model => model.MaxSalary)<span class="rupee">&#8377;</span>
        </dd>
        <dt class="col-sm-3">
            Job Location
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.JobLocation)
        </dd>
        <dt class="col-sm-3">
            Job Description
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.JobDesc)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
    <div>
        <a class="btn btn-primary" asp-action="AddOrEdit" asp-route-employeeId="@Model.Id">Edit</a>
        <a class="btn btn-danger" asp-action="Index">Back</a>
    </div>
</div>