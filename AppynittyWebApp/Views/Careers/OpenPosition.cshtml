@model AppynittyWebApp.ViewModels.CareersVM

@{
    ViewData["Title"] = "Open Position";
}
<link href="~/Assets/CSS/AboutUs.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
@*<link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@700&display=swap" rel="stylesheet">*@
<style>
    .newttl {
        list-style-type: none;
    }

    body {
        background: #e6e6e6;
    }

    h4 {
        font-weight: 600;
    }
    /*  rgb(10 108 108 / 78%),*/
    #careers {
        /* background: linear-gradient(rgba(210, 71, 90, 0.5), rgba(210, 71, 90, 0.5)), url("../../Assets/Images/doors-1767563.jpg");*/
        /* background: linear-gradient(rgb(60, 186, 186, 50%), rgb(60, 186,186, 50%)), url(../../Assets/Images/doors-1767563.jpg);*/
        background: linear-gradient(rgb(8,34,34, 78%), rgb(40, 82, 82, 50%)), url(../../Assets/Images/doors-1767563.jpg);
        background-size: cover;
        color: #fff;
        height: 100vh;
    }

    .appy-btn {
        background: #3CBABA;
        color: #FFFFFF;
        font-size: 18px;
        margin: 0;
    }

        .appy-btn:hover {
            background: transparent;
            color: #FFFFFF;
            border: 1px solid #3CBABA;
        }

    #drop:hover {
        background: #3CBABA;
        color: #FFFFFF;
        border: 1px solid #3CBABA;
    }
</style>
@*<img src="~/Assets/Images/doors-1767563.jpg" />*@


<div class="career-section py-5" id="careers">
    <div class="container mt-5 pt-5 content-head">
        <h1 class="pt-5 text-center heading" style="font-weight:700">COME JOIN US!</h1>
        <h3 class="pt-3 text-center font-weight-bold para">
            Do you want a job with global impact, working with great teammates for well-known brands?
            Do you want to grow and learn, while also having fun?
        </h3>
        <div class="text-center pt-5 open-pos"><a class="px-4 py-3 appy-btn" href="#current">Open Positions</a></div>
    </div>
</div>
@*<h1 class="text-center py-5">Careers Section</h1>*@
<div class="container py-5">

    <div class="top-flex mt-3">
        <div class="half">
            <div class="left">
                <div class="section">
                    <div class="content">
                        <div class="title">Careers</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="half">
            <div class="right">
                <div class="section">
                    <div class="content">
                        <div class="title">
                            <!--You can accomplish big<span class="l-b"><br></span>things at Appynitty-->At Appynitty You Don&rsquo;t Just Do a Job,<br />
                            You Accomplish Your Dreams!!!
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="content">
            <p class="text" id="current" name="current">Appynitty Communications is a rapidly expanding company and we welcome hard working and professional candidates across various departments. The growth and prosperity of our employees is of utmost importance to us and we therefore strive hard to maintain a conducive work environment and offer salary as per highest industry standards.</p>

            <p class="text">&nbsp;</p>

            <p class="text">Do drop in your Resume and we will <!-- <a href="#login-box" class="login-window"> -->get in touch with you!<!-- </a> --></p>
        </div>

    </div>

    <div class="row">
        @{
            var obj = ViewBag.careerslist;
        }
        <div class="col-sm-8 p-3">
            <h4 class="p-3" style="border-bottom: 2px solid #d5d0d0; color: #0d6666">Current Opening</h4>
            @foreach (var item in obj)
            {
                <div class="p-4 mb-3" style="border-bottom: 2px solid #d5d0d0;">
                    <heaade>
                        <div>
                            <h4>
                                @item.JobTitle
                            </h4>
                        </div>
                    </heaade>
                    <div>
                        <span class="px-2">


                            <i class="fa-regular fa-briefcase" style="color: #939797;font-weight:unset"></i> @item.MinExp - @item.MaxExp Yrs
                        </span>
                        @if (@item.MinSalary != null)
                        {
                    <span class="px-2"><img src="~/Assets/Images/indian-rupee_lar.png" style="width:20px" /> :- ₹ @item.MinSalary Rs- ₹ @item.MaxSalary</span>
                        }
                        else
                        {
                            <span class="px-2"><img src="~/Assets/Images/indian-rupee_lar.png" style="width:20px" /> :- Not disclosed</span>
                        }

                        <i class="fa-regular fa-location-dot" style="color: #939797;font-weight:unset"></i> <span>@item.JobLocation</span>
                    </div>
                    <div>
                        @Html.Raw(@item.JobDesc)
                    </div>
                </div>
            }

        </div>

        <div class="col-sm-4" style="border-left: 2px solid #d5d0d0;">
            <div>
                <div>
                    <h3 class="text-center">Drop your CV here</h3>
                    <p class="text-center">We will consider your Profile for future Jobs</p>
                </div>
                @*<div>
                        <a asp-action="CVSection">
                            <span>Drop CV</span>
                        </a>
                    </div>*@
            </div>
            <div class="contact-form-section">
                <div class="container">
                    <div class="form-section pt-0">
                        <div class="f-g-s">
                            <div class="email">
                                <a href="mailto:hr@appynitty.com" title="hr@appynitty.com">
                                    <span class="icon ai-email"></span>
                                    hr@appynitty.com
                                </a>
                            </div>
                        </div>
                        <div class="f-g-s">
                            <div class="mobile">
                                <a href="tel:+919209100900" title="Call Us +919209 100 900">
                                    <span class="icon ai-call"></span>
                                    +91 9209 100 900
                                </a>
                            </div>
                        </div>
                        <!-- <div class="f-g-s">
                            <div class="form-group">
                                <input class="form-control" placeholder="Upload your CV">
                            </div>
                        </div>      -->
                        <div class="f-g-s">
                            <div class="c-f-b">
                                <a asp-action="CVSection" class="login-window"><button class="appy-btn" id="drop">Drop Your CV</button> </a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



@*</div>*@
<div>
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog" style="top:35%">

            <!-- Modal content-->
            <div class="modal-content">
              
                    @*<button type="button" class="close" data-dismiss="modal">&times;</button>*@
                    <h4 class="modal-title text-center">Thank You</h4>
              
                    <div class="modal-body">
                        <p class="text-center">Your Details Uploded Successfully.</p>
                        <div class="text-center"> <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button></div>
                    </div>
                @*<div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>*@
            </div>

        </div>
    </div>
</div>
<script>
     $(document).ready(function ()
{
    if ('@TempData["value"]' != "" || '@TempData["value"]' != null)
    {
        if ('@TempData["value"]' == "Saved")
        {
            $("#myModal").modal('show');
        }
        else {
            $("#myModal").modal('hide');
        }
    }
});

    $('a').click(function () {
        $('html, body').animate({
            scrollTop: $($(this).attr('href')).offset().top
        }, 1000);
        return false;
    });
</script>

