
@model AppynittyWebApp.ViewModels.AppliedEmpVM

@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}
<style>
    .danger {
        color: red !important;
    }

    .success {
        color: green !important;
    }
</style>
<h1 style="text-align:center;">Applied Employee List</h1>


<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Date
                </th>
                <th>
                    Name
                </th>
                <th>
                    Job Title
                </th>
                <th>
                    Email
                </th>
                <th>
                    Mobile Number
                </th>
                <th>
                    Current Location
                </th>
                <th>
                    Total Experience
                </th>

                <th>
                    CV
                </th>
            </tr>
        </thead>
        <tbody>
            @if (@Model.ListAppEmpCVDetails != null)
            {
                @foreach (var item in @Model.ListAppEmpCVDetails)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile_No)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Current_Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tot_Exp)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Filename)
                </td>*@
                <td>@Html.ActionLink("Download", "DownloadFile", new { fileName = item.Filename })</td>
            </tr>
                }
            }
            else
            {
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td class="text-center">No Data Available</td>
                </tr>
            }

        </tbody>
    </table>
    <div class="form-group">
        <a class="btn btn-danger" asp-action="Index">Back</a>
    </div>
</div>