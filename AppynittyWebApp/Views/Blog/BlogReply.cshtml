
@model AppynittyWebApp.ViewModels.BlogReplyVM

@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}
<style>
    .danger {
        color: red !important;
    }

    .success {
        color: green !important;
    }
</style>
<h1 style="text-align:center;">Blog Reply List</h1>


<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Date
                </th>
                <th>
                    Name
                </th>
                <th>
                    Blog Title
                </th>
                <th>
                    Email
                </th>
                <th>
                    Mobile Number
                </th>
                <th>
                    Comment
                </th>

            </tr>
        </thead>
        <tbody>
            @if (@Model.ListNewsRplyDetails != null)
            {
                @foreach (var item in @Model.ListNewsRplyDetails)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BlogTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mobile_No)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comment)
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td class="text-center">No Data Available</td>
                </tr>
            }

        </tbody>
    </table>
    <div class="form-group">
        <a class="btn btn-danger" asp-action="Index">Back</a>
    </div>
</div>