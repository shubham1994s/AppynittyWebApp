@model AppynittyWebApp.ViewModels.BlogViewModel


@{
    ViewData["Title"] = "NewSection";
}
<link href="~/Assets/CSS/Blog.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="https://www.appynitty.com/assets/libs/animate/animate.min.css" />
<style>
    .newttl {
        list-style-type: none;
    }
    hr {
        border-top: 1px solid rgb(82 80 80 / 52%)
    }
</style>


<div class="product-blog-section">
    <div class="container">
        <h2 class="text-center py-4">Blog</h2>
        <div class="main col-md-12">
            <form enctype="multipart/form-data" asp-action="BlogSection">
                <hr />
                <dl class="row">
                    <dd class="col-sm-8">
                        <h3 style="text-align:center; margin-bottom: 20px;"> @Html.DisplayFor(model => model.BlogsTitle)</h3>
                        <p style="line-height:2rem;text-align:justify">@Html.DisplayFor(model => model.BlogsEng)</p>

                    </dd>
                    @{
                        var obj = ViewBag.Bloglist;
                    }
                    <dd class="col-sm-4">
                        <h4 style="margin-bottom: 20px; text-align: center;">Trending</h4>
                        <ul style="padding: 10px; margin-left: 20px;">
                            @foreach (var item in obj)
                            {


                                <li class="newttl mb-3">

                                    <a asp-action="BlogSection" asp-route-id="@item.Id" class="h6 ">@item.BlogsTitle</a>

                                </li>

                                <span id="getfilename" style="display:none;">@Html.DisplayFor(model => model.BFileName)</span>



                            }
                        </ul>
                    </dd>
                </dl>
                @if (Model.BFileName != null)
                {
                    <dl class="row">
                        <span id="getfilename" style="display:none;">@Html.DisplayFor(model => model.BFileName)</span>
                        <img id="image" src="~/BlogImages/model.FileName"
                             class="r-box"
                             height="500" width="500"
                             asp-append-version="true" />
                    </dl>
                }
                <h4>More Related Article</h4>

                <div class="product-blog">
                    @foreach (var item in obj)
                    {
                        <div class="blog-box">
                            <div class="blog">
                                <div class="top-section">
                                    <div class="top">
                                        <div class="img-box">
                                            <div class="blog-image">
                                                <!-- <img src="http://placehold.it/80x80" class="img img-circle">-->
                                            </div>
                                        </div>
                                        <div class="name-box">
                                            <div class="name">
                                                <a asp-action="BlogSection" asp-route-id="@item.Id" style="color:#fff">@item.BlogsTitle</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="bottom-section">
                                    <div class="bottom">
                                        <div class="read-more">
                                            <div class="text"><a asp-action="BlogSection" asp-route-id="@item.Id">Read Article</a></div>
                                        </div>
                                        <div class="share">
                                            <div class="share-section">
                                                <div class="blog-social animated">
                                                    <div class="fb icon ai-facebook"></div>
                                                    <div class="tw icon ai-twitter"></div>
                                                    <div class="ln icon ai-linkedin"></div>
                                                    <div class="gp icon ai-google-plus"></div>
                                                    <div class="yt icon ai-youtube"></div>
                                                </div>
                                                <div class="blog-social-share ">
                                                    <div class="icon ai-share animated zoomIn"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="contact-form-section">
                    <div class="container">
                        <div class="content">
                            <div class="title">
                                <h6>LEAVE A REPLY</h6>
                            </div>
                        </div>
                    </div>
                    <div class="container">


                        <div class="form-section" style="width:50%">

                            <div class="f-g-s">
                                <div class="form-group">
                                    <input asp-for="BlogId" class="form-control" name="BlogId" value="@ViewBag.ID" type="hidden">
                                    <input asp-for="Name" class="form-control" placeholder="Name" type="text" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="f-g-s">
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control" name="Email" placeholder="Email Id" type="email">
                                </div>
                            </div>
                            <div class="f-g-s">
                                <div class="form-group">
                                    <input asp-for="MobileNo" class="form-control" name="MobileNo" placeholder="Phone" type="tel">
                                </div>
                            </div>
                            <div class="f-g-s" style="width: 530px;">
                                <div class="form-group">
                                    <textarea asp-for="Comment" class="form-control" name="comment" style="height:200px;" placeholder="Comment.."> Comment.. </textarea>
                                </div>
                            </div>
                            <div class="f-g-s mb-4">
                                <div class="c-f-b">
                                    <input class="btn btn-primary" type="submit" value="Save" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>

</div>


@section Scripts {
    <script>

        $(document).ready(function () {
            debugger;
            var filename = document.getElementById("getfilename").innerHTML;

            document.getElementById("image").src = "/BlogImages/" + filename;
        });
    </script>
}
