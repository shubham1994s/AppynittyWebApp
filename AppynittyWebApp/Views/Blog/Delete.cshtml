@model AppynittyWebApp.Models.Blog
@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
}
<h2>Deleting Employee</h2>

<h3>Would you like to continue?</h3>
<div class="container p-3 my-3 border">
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.BlogsDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.BlogsDate)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.BlogsTitle)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.BlogsTitle)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.BlogsEng)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.BlogsEng)
        </dd>
        <dt class="col-sm-3" style="display:none;">
            @Html.DisplayNameFor(model => model.BlogsMar)
        </dt>
        <dd class="col-sm-9" style="display:none;">
            @Html.DisplayFor(model => model.BlogsMar)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input class="btn btn-primary" type="submit" value="Yes" />
        <a class="btn btn-danger" asp-action="Index">No</a>
    </form>

</div>